<config>
    <frontend>
        <layout>
            <updates>
                <halloween>
                    <file>belvg/halloween.xml</file>
                </halloween>
            </updates>
        </layout>
    </frontend>
    <global>
        <blocks>
            <halloween>
                <class>Belvg_Halloween_Block</class>
            </halloween>
        </blocks>
        <helpers>
            <halloween>
                <class>Belvg_Halloween_Helper</class>
            </halloween>
        </helpers>
        <models>
            <halloween>
                <class>Belvg_Halloween_Model</class>
            </halloween>
        </models>
    </global>
    <default>
        <halloween>
            <settings>
                <enable>0</enable>
                <title><![CDATA[Halloween Special Offer]]></title>
                <position>right</position>
            </settings>
        </halloween>
    </default>
</config>